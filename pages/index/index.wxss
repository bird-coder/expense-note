/**index.wxss**/
.body {
  /* padding-top: 50%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.start_btn {
  margin-top: 50%;
  width: 300rpx;
  height: 300rpx;
  border: 1px solid rgb(247, 144, 76);
  border-radius: 50%;
  text-align: center;
  line-height: 300rpx;
  color: #ddd;
  text-shadow: rgba(0,0,0,0.9) 0px 1px 2px;
  font-weight: bold;
  overflow: visible;
  background: linear-gradient(left top, rgb(247, 56, 8), rgb(245, 81, 16), #ddd);
  background: -moz-linear-gradient(left top, rgb(247, 56, 8), rgb(245, 81, 16), #ddd);
  background: -webkit-linear-gradient(left top, rgb(247, 56, 8), rgb(245, 81, 16), #ddd);
  background: -o-linear-gradient(left top, rgb(247, 56, 8), rgb(245, 81, 16), #ddd);
  box-shadow: rgba(0,0,0,0.5) 0px 2px 5px, 
    inset rgba(255,255,255,0.25) 1px 1px 0px, 
    inset rgba(255,255,255,0.03) 20px 20px 20px, 
    inset rgba(247, 144, 76,0.15) -20px -20px 20px, 
    inset rgba(255,255,255,0.05) 20px 20px 20px;
}
.start_btn::after {
  border: none;
}
.start_btn text {
  display: inline-block;
  width: 100px;
  font-size: 50px;
  font-weight: bold;
}
.start_btn2 {
  margin-top: 25%;
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  background-color: #fff;
  color: #ddd;
  text-shadow: rgba(0,0,0,0.9) 0px 1px 2px;
  font-weight: bold;
  box-shadow: rgba(0,0,0,0.5) 0px 2px 5px, 
    inset rgba(255,255,255,0.25) 1px 1px 0px, 
    inset rgba(255,255,255,0.03) 20px 20px 20px, 
    inset rgba(255,255,255,0.15) -20px -20px 20px, 
    inset rgba(255,255,255,0.05) 20px 20px 20px;
}
.start_btn2 .speedView {
  display: inline-block;
  width: 150px;
  text-align: center;
  position: absolute;
  top: 25%;
  left: 50%;
  margin-left: -75px;
  flex-direction: column;
}
.start_btn2 .speedView .speed {
  font-size: 50px;
  font-weight: bold;
}
.start_btn2 .speedView .stop {
  font-size: 30px;
  font-weight: bold;
  margin-top: 20%;
}
.disc {
  width: 100%;
  height: 100%;
  margin-top: -16px;
}
.finger {
  font-size: 30px;
  color: rgb(223, 245, 22);
}
.info {
  padding: 15px;
  padding-top: 0;
  font-size: 14px;
  color: #fff;
  font-weight: bold;
  text-shadow: rgba(0,0,0,0.9) 0px 1px 2px;
}
.share-button {
  position: absolute;
  top: 80%;
  left: -30rpx;
  background-color: rgba(0, 0, 0, 0);
  z-index: 3;
}
.share-button::after {
  border: none;
}
.share-button image {
  position: relative;
  width: 232rpx;
  height: 86rpx;
  top: 20rpx;
}
.r-list {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 10%;
  right: 20rpx;
  z-index: 3;
  align-items: center;
  /* justify-content: center; */
}
.r-list button {
  margin: 0;
  padding: 0;
  background-color: transparent;
  border: none;
  width: 80rpx;
  height: 80rpx;
}
.r-list .qq {
  width: 100%;
  height: 100%;
}
.toast {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
.toast .toast-view {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
}
.toast-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 80%;
  padding: 30rpx;
  font-size: 14px;
  z-index: 12;
}
.toast-content image {
  width: 80%;
}