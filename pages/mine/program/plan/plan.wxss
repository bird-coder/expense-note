/* pages/mine/program/plan/plan.wxss */
.notice {
  font-size: 16px;
  line-height: 30px;
  margin-left: 30rpx;
  color: #666;
}
.nameView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20px;
  color: rgb(252, 51, 16);
}
.nameView .name {
  width: 60%;
  border-bottom: 1px solid #ccc;
  padding-left: 5px;
  font-size: 13px;
  color: #666;
}
.add {
  font-size: 20px;
  color: rgb(16, 204, 63);
  text-align: center;
}
.close {
  font-size: 20px;
  color: rgb(248, 94, 56);
  text-align: center;
}
.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10px 20px;
}
.pick {
  width: 35%;
  margin-right: 8%;
  padding-left: 5px;
  border: 1px solid #ccc;
  border-radius: 2px;
  /* color: #999; */
  font-size: 13px;
}
.timePick {
  width: 35%;
  margin: 20px;
  padding: 5px 10px;
  border: 1px solid rgb(16, 204, 63);
  border-radius: 3px;
  font-size: 15px;
}
.num {
  width: 30%;
  border: 1px solid #ccc;
  border-radius: 2px;
  margin-right: 8%;
  padding-left: 5px;
  font-size: 13px;
}
.btn {
  width: 100%;
  padding: 30rpx 0;
  font-size: 16px;
  color: #fff;
  background-color: #999;
  text-align: center;
  position: fixed;
  bottom: 0;
}
.btn.active {
  background-color: rgb(16, 204, 63);
}