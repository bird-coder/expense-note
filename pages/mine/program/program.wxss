/* pages/mine/program/program.wxss */
.add {
  font-size: 16px;
  color: rgb(56, 133, 248);
  text-align: center;
  margin-top: 20rpx;
}
.notice {
  font-size: 14px;
  line-height: 30px;
  margin-left: 30rpx;
  color: #666;
}
.list {
  /* display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; */
  width: 100%;
  padding-bottom: 30%;
}
.item {
  min-height: 200rpx;
  /* position: relative; */
  color: #999;
  margin: 10rpx 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  position: relative;
}
.item.active {
  margin: 10rpx 35rpx;
  border: 1rpx solid rgb(16, 204, 63);
  color: rgb(16, 204, 63);
}
.item image {
  width: 25%;
  height: 25%;
  position: absolute;
  left: 37%;
  top: 30%;
  z-index: -1;
  transform: rotate(-30deg);
}
.item .row {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 12px;
}
.item .fill {
  flex: 1;
}
.item .title {
  font-size: 18px;
}
.btn {
  width: 100%;
  padding: 30rpx 0;
  font-size: 16px;
  color: #fff;
  background-color: #999;
  text-align: center;
  position: fixed;
  bottom: 0;
}
.btn.active {
  background-color: rgb(16, 204, 63);
}