/* pages/mine/advise/advise.wxss */
.header {
  background-color: rgb(97, 159, 252);
  padding: 5px 10px;
}
.list {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 15px;
}
.item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px;
  border-bottom: 2rpx solid #ccc;
}
.item:last-child {
  border-bottom: none;
}
.item image {
  width: 25%;
  height: 50px;
  border-radius: 3px;
}
.item view {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: 70%;
}
.item view text {
  color: #999;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; */
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  overflow: hidden;
}
.item view .title {
  font-size: 16px;
  font-weight: bold;
  color: #000;
}
.list_v {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 10px;
}
.item_v {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;
  width: 42%;
  position: relative;
}
.item_v .cover {
  width: 100%;
  height: 80px;
  margin-bottom: 5px;
  border-radius: 5px;
}
.item_v .play {
  position: absolute;
  width: 20px;
  height: 20px;
  /* left: 40%; */
  top: 28%;
}