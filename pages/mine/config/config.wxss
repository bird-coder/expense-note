/* pages/mine/config/config.wxss */
.info {
  display: flex;
  flex-direction: column;
}
.info>view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  min-height: 80rpx;
  border-bottom: 1px solid #f3f3f3;
}
.item {
  display: block;
  width: 90%;
  text-align: right;
}
.info view text:first-child {
  position: absolute;
  left: 10px;
}
.info view text:last-child {
  position: absolute;
  right: 10px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  padding: 0;
  border-radius: 50%;
}