/* pages/mine/index.wxss */
.list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}
.item {
  width: 49%;
  min-height: 200rpx;
  position: relative;
  color: #fff;
  margin: 1rpx;
}
.item view {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  text-shadow: rgba(0,0,0,0.9) 0px 1px 2px;
}
.item .title {
  font-size: 18px;
}
.item image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.item_hover {
  box-sizing: border-box;
  border: 1rpx solid #ccc;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  min-height: 400rpx;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  padding: 0;
  border-radius: 50%;
  margin-top: 150rpx;
}
.userinfo-avatar::after {
  border: none;
}
.userinfo-avatar image {
  width: 100%;
  height: 100%;
}
.userinfo-nickname {
  color: #fff;
  font-size: 14px;
  font-weight: bold;
  text-shadow: rgba(0,0,0,0.9) 0px 1px 2px;
}