/* pages/mine/milestone/milestone.wxss */
.userinfo {
  position: relative;
  min-height: 400rpx;
}
.header {
  font-size: 20px;
  color: #fff;
  font-weight: bold;
  padding: 20px;
  text-align: center;
  text-shadow: rgba(0, 0, 0, 0.9) 0px 1px 2px;
}
.count {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 10px;
}
.count view {
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 12px;
  text-shadow: rgba(0, 0, 0, 0.9) 0px 1px 2px;
}
.count .data {
  color: greenyellow;
  font-size: 14px;
  text-indent: 10px;
}
.item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 0;
}
.content {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.value {
  color: #aaa;
  font-size: 14px;
  font-weight: bold;
  text-shadow: rgba(0, 0, 0, 0.2) 0px 1px 2px;
}
.icon {
  width: 50%;
  font-size: 50px;
  color: #ccc;
  text-align: center;
}